<?xml version="1.0" encoding="utf-8"?>
<?xml_l version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.MapsActivity"
    android:layout_width="match_parent"
    android:background="@color/window_background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_marginTop="150dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/set_location_pin"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:translationY="50dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/location_pin"
                    android:layout_height="50dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/search_place"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:layout_marginBottom="170dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/card_back"
                    app:cardCornerRadius="23dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="35dp"
                            android:scaleY="0.7"
                            android:scaleX="0.7"
                            android:src="@drawable/search_location"
                            android:layout_height="35dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/find_me_cardview"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="visible"
                    android:layout_marginBottom="110dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/card_back"
                    app:cardCornerRadius="23dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/locate_icon"
                            android:layout_width="35dp"
                            android:scaleY="0.8"
                            android:scaleX="0.8"
                            android:src="@drawable/locate_icon"
                            android:layout_height="35dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/finish_create_route"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="170dp"
                    android:layout_marginEnd="10dp"
                    app:cardBackgroundColor="@color/card_back"
                    app:cardCornerRadius="23dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="35dp"
                            android:scaleY="0.7"
                            android:scaleX="0.7"
                            android:src="@drawable/check_icon"
                            android:layout_height="35dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_sheet_layout"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bus_icon"
                        android:layout_width="31dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/bus_loc"
                        android:layout_height="60dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/view_layout"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="1dp"
                            android:visibility="gone"
                            android:layout_alignParentEnd="true"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"
                                    android:layout_height="wrap_content"
                                    android:text="@string/View" />


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:translationY="1dp"
                                    android:src="@drawable/next_arrow"
                                    android:layout_height="12dp"/>

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"
                                android:layout_height="wrap_content"
                                android:text="Click a bus icon" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/source_textview"
                                    android:layout_width="match_parent"
                                    android:layout_marginEnd="75dp"
                                    android:textSize="13sp"
                                    android:layout_marginTop="3dp"
                                    android:layout_height="19dp"
                                    android:text="To see the route it's going." />

                                <RelativeLayout
                                    android:id="@+id/set_source_location"
                                    android:layout_width="wrap_content"
                                    android:visibility="gone"
                                    android:layout_marginVertical="5dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/set_start_loc_textview"
                                            android:layout_width="wrap_content"
                                            android:textSize="15sp"
                                            android:layout_gravity="center_vertical"
                                            android:textColor="@color/colorPrimary"
                                            android:layout_height="wrap_content"
                                            android:text="@string/search" />


                                        <ImageView
                                            android:id="@+id/set_start_loc_imageview"
                                            android:layout_width="15dp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="5dp"
                                            android:translationY="1dp"
                                            android:src="@drawable/search_location"
                                            android:layout_height="15dp"/>

                                    </LinearLayout>

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/destination_textview"
                                    android:layout_width="match_parent"
                                    android:textSize="13sp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginEnd="75dp"
                                    android:layout_height="19dp"
                                    android:text="" />

                                <RelativeLayout
                                    android:id="@+id/set_destination_location"
                                    android:layout_width="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:visibility="gone"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:textSize="15sp"
                                            android:layout_gravity="center_vertical"
                                            android:textColor="@color/colorPrimary"
                                            android:layout_height="wrap_content"
                                            android:text="@string/search" />


                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="5dp"
                                            android:translationY="1dp"
                                            android:src="@drawable/search_location"
                                            android:layout_height="15dp"/>

                                    </LinearLayout>

                                </RelativeLayout>

                            </RelativeLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/searched_routes_recyclerview"
                                android:layout_marginTop="15dp"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"/>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/search_button_layout"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="60dp"
                    android:background="@color/nav_bar_color"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/search_button"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:background="@null"
                        android:text="Search Destination"
                        android:layout_height="40dp"/>

                    <ImageView
                        android:layout_width="35dp"
                        android:scaleY="0.4"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/search_button"
                        android:scaleX="0.4"
                        android:translationY="1dp"
                        android:src="@drawable/search_location"
                        android:layout_height="35dp"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                app:cardBackgroundColor="@color/card_back"
                app:cardCornerRadius="13dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Settings"
                        android:textSize="15sp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_marginStart="5dp"
                        android:translationY="3dp"
                        android:src="@drawable/settings"
                        android:layout_height="15dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:id="@+id/network_relative"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:translationY="-20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/no_internet_text"
                android:layout_width="match_parent"
                android:text="No internet connection."
                android:gravity="center_horizontal"
                android:paddingVertical="1dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/maps_loading_screen"
            android:background="@color/window_background"
            android:alpha="0.7"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/home_progressBarSignUp"
                style="?android:attr/progressBarStyle"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>